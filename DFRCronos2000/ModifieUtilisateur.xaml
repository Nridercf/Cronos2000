<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DFRCronos2000.ModifieUtilisateur"
             Title="ModifieUtilisateur">
    <VerticalStackLayout>
        <Entry x:Name="EntryNom"
               Placeholder="Nom"/>
        <Entry x:Name="EntryPrenom"
               Placeholder="Prenom"/>
        <Entry x:Name="EntryMatricule"
              Placeholder="Matricule"/>
        <Picker x:Name="PickerRole"
               Title="Role" ItemsSource="{Binding _roles}" />
        <Button Text="Sauvegarder" Clicked="ValidationModification"/>

    </VerticalStackLayout>
</ContentPage>